<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.tweenanimation.BirdView
        android:id="@+id/birdView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Switch
        android:id="@+id/translationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translation"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Switch
        android:id="@+id/rotationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotation"
        android:layout_below="@id/translationSwitch"
        android:layout_centerHorizontal="true" />

    <Switch
        android:id="@+id/scaleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scale"
        android:layout_below="@id/rotationSwitch"
        android:layout_centerHorizontal="true" />

    <Switch
        android:id="@+id/alphaSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alpha"
        android:layout_below="@id/scaleSwitch"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/keyframeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keyframe Animation"
        android:layout_below="@id/alphaSwitch"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
